---
import BaseLayout from '@/components/layouts/base-layout.astro';
import type { ImageMetadata } from 'astro';
import Image from 'astro/components/Image.astro';

interface Props {
  title: string;
  image: ImageMetadata;
}

const { title, image } = Astro.props;
---

<BaseLayout {title}>
  <main class="page">
    <div class="container">
      <aside>
        <slot />
      </aside>
      <div class="main">
        <div class="decor-box">
          <Image class="decor" src={image} alt="" />
        </div>
      </div>
    </div>
  </main>
</BaseLayout>

<style>
  .page {
    padding-block: 2rem;
  }

  .main {
    flex: 1;
  }

  .container {
    display: flex;
    gap: 1rem;
    height: 100%;
  }

  aside {
    display: flex;
    flex-direction: column;
    gap: 1rem;
    max-width: 20rem;
    width: 100%;
  }
  .decor-box {
    width: 55%;

    margin-inline: auto;
  }
  .decor {
    width: 100%;
    height: auto;
    object-fit: cover;
    object-position: center;
  }
</style>
