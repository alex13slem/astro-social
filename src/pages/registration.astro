---
import AuthPage from '@/components/layouts/auth-page.astro';
import FormRegistration from '@/components/lvl2/forms/form-registration.astro';
import bg from '../assets/img/login-decor.png';
---

<AuthPage title="Регистрация" image={bg}>
  <div class="root">
    <div class="island">
      <h1>Регистрация</h1>
      <FormRegistration />
    </div>
    <div class="island">
      <p class="has-account">Есть аккаунт? <a href="/login">Вход</a></p>
    </div>
  </div>
</AuthPage>
<style>
  .root {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
  .island {
    border-radius: 0.75rem;
    background-color: var(--c-bg-island);
    padding: 2rem 1.5rem;
  }

  h1 {
    text-align: center;
    font-size: xx-large;
    margin-bottom: 2rem;
  }

  .has-account {
    text-align: center;
  }
</style>
